/* pages/userPage/userPage.wxss */

.userinfo {
  position: absolute;
  top:5%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
}

/** 授权信息的按钮**/

.authorize {
  position: absolute;
  top: 40%;
  margin-left: 7%;
  width: 85pt;
  height: 85pt;
  border-radius: 50%;
  line-height: 500%;
  background-color: #3bac6a;
  color: #fff;
}

/* 图表 */

.canvas {  
  width: 750rpx;
  height: 600rpx;
}

.tobuttom {
  margin-top:20rpx;
  border: 1rpx solid #3bac6a;
  width: 750rpx;  
}

.borderBetweenWarupButton {
  border-top-style: solid;
  border-top-color: #3bac6a;
  border-top-width: 1rpx;
}

.contactUs {
  width: 750rpx;  
  /* 背景颜色 */
  background-color: white;
  /* 边框弧度 */
  border-radius: 0rpx;
  height: 85rpx;
  font-weight: 100;
}
.contactUs::after {
  border: 0;
}
